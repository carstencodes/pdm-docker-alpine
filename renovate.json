{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update .version files",
      "managerFilePatterns": [
        "github.version",
        "gitlab.version",
        "pdm.version",
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)\\s+(?<currentValue>\\d+(\\.\\d)*)\\s*"
      ]  
    }
  ]
}
